<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Constrain"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/LL1Reg"
        android:background="@color/LL1"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText3"
            android:hint="Email"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/editText"
            android:hint="Введите имя"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText

            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите пароль"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />
        <EditText
            android:id="@+id/editText4"
            android:hint="Ключевое слово"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/btnreg"
            android:text="registrasiya"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/LL1Conecct"
        android:background="@color/teal_700"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextEmailConnect"
            android:hint="Email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/editTextPassConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите пароль"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />




        <Button
            android:id="@+id/btnConnect"
            android:text="Войти"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>