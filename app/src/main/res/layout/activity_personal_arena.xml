        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:text="меню"
            android:textColor="@color/white"
            android:textSize="24sp"
